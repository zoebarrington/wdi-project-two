<head>
  <title>Write a New Blogpost</title>
</head>
<body>
  <section class="hero is-white is-fullheight" id="new-page">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-4 is-offset-4">
          <h3 class="title has-text-white">Write a New Blogpost</h3>
          <p class="subtitle has-text-white">Write your blogpost below</p>
          <div class="box">
            <figure class="avatar">
              <img height="100px" width="100px" src="/images/face.jpg">
            </figure>
            <form action="/blog" method="post">
              <div class="field">
                <div class="control">
                  <label for="name">Name:</label>
                  <input name="name" id="name" placeholder="e.g.Intro" autofocus="">
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <label for="name">Image</label>
                  <input name="image" id="name" placeholder="image">
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <label for="dayNumber">Day Number</label>
                  <input name="dayNumber" id="dayNumber" placeholder="day number">
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <label for="blogContent">Blogpost Content</label>
                  <textarea name="blogContent" id="blogContent" placeholder="blog content"></textarea>
                  </div>
                  </div>
              <button class="button is-block is-info is-large is-fullwidth">Create your blogpost!</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
  </section>
